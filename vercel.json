{
  "version": 2,
  "builds": [
    {
      "src": "api/backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/ml-service/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "35mb",
        "build": "pip install -r requirements.txt && python precompute.py"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/backend/:path*",
      "destination": "/api/backend/index.js"
    },
    {
      "source": "/api/ml-service/:path*",
      "destination": "/api/ml-service/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend"
    }
  ]
}